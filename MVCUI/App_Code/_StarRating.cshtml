@using System.Web.Mvc

@helper StarRate(Double? _ratingValue, String _urlSaveRate, Int64 productId)
{
Double Id = _ratingValue ?? (Double)0;
Id = Math.Round(Id);
    <div class="xx_starRating">
        <input type="hidden" data-rate-now="0" data-rate="@(Id)" data-productId="@productId" data-url="@_urlSaveRate" name="@Id" id="@Id" data-set="false" />
        @if (Id >= 1 && Id <= 5)
        {
            int _count=0;
            for (int i = 1; i <= Id; i++)
            {
                <i class="fa fa-star ____i" data-val="@i" aria-hidden="true"></i>
                _count = i;
            }
            int _cc = _count;
            for (int j = 1; j <= (5 - _count); j++)
            {
                _cc++;
                <i class="fa fa-star-o ____i" data-val="@_cc" aria-hidden="true"></i>
            }
        }
        else
        {
            for (int i = 1; i <= 5; i++)
            {
                <i class="fa fa-star-o ____i" data-val="@i" aria-hidden="true"></i>
            }
        }
    </div>
}