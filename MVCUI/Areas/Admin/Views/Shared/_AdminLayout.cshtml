
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow" />
    <title>@ViewBag.Title </title>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <noscript>
        <meta http-equiv="refresh" content="0;url=http://www.google.com">
    </noscript>

    @Styles.Render(Links.BundleExtension.Style.StyleOfAdminLayout)
    @Styles.Render(Links.BundleExtension.Style.fonts)
    @Scripts.Render(Links.BundleExtension.Scripts.Modernizer)
    @RenderSection(Links.BundleExtension.RenderSection.CssSection, required: false)

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        @{ Html.RenderPartial(MVC.Admin.Home.Views._navigation); }
        <hr />

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h4 class="page-header text-danger">@ViewBag.Title </h4>
                </div>
            </div>

            @RenderBody()
            <hr />
        </div>
    </div>
    <!-- modal -->
    <div class="modal fade" id="adminModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    </div>
    <div class="modal fade" id="lightBox" tabindex="-1" role="dialog" aria-labelledby="myLightBox" aria-hidden="true">

    </div>

    @Scripts.Render(Links.BundleExtension.Scripts.Jquery)

    @Scripts.Render(Links.BundleExtension.Scripts.JsForAdminLayout)
    <script>
        Admin.HighLightMenu();
        Public.Routin();
        $(function () {
            AjaxForm.EnableBootstrapStyleValidation();
            AjaxForm.EnablePostbackValidation();
        });

    </script>
    @RenderSection(Links.BundleExtension.RenderSection.ScriptsSection, required: false)
</body>

</html>