@model DomainClasses.Entities.Picture

@{
    String imageUrl = VirtualPathUtility.ToAbsolute(Links.BundleExtension.PathAbsolouteUploadPicture.PathUploadPicture+ "/" + Model.Path);
}
<div class="col-md-3 teaser lazyload">
    <img src="@Url.Content(Links.BundleExtension.PathAbsolouteUploadPicture.PathUploadPicture+"/"+Model.Path)?w=60&h=60&mode=crop" class="img-thumbnail lazyload" width="60" height="60">
</div>
<div class="col-md-6">
    <input type="text" class="form-control input-sm select" value="@imageUrl">
</div>
<div class="col-md-2">
    <span id="row-@Model.Id" data-id="@Model.Id" class="btn btn-danger btn-sm">حذف</span>
</div>