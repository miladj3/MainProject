@{
    ViewBag.Title = "ارسال فایل";
    Layout = MVC.Admin.Shared.Views._AdminLayout;
}

@section css
{
    @Styles.Render(Links.BundleExtension.Style.fileInputUploadCSS)
}
<div class="row">
    <div class="col-lg-12">

        @Html.ActionLink("لیست تصاویر", MVC.Admin.Folder.ActionNames.Pictures, MVC.Admin.Folder.Name, new { folderId = ViewBag.FolderId }, new { @class="btn btn-info" })

        <hr />
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm(MVC.Admin.Folder.ActionNames.AddPictureToFolder, MVC.Admin.Folder.Name, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" value="@ViewBag.FolderId" />
            <div class="col-md-12">
                <input id="UploadImage" name="files" multiple="true" type="file" accept="image/*" />
            </div>

        }
    </div>
</div>


@section scipts
{
    @Scripts.Render(Links.BundleExtension.Scripts.JqueryVal)
    @Scripts.Render(Links.BundleExtension.Scripts.fileInputUploadJS)
    <script>
        Admin.OneImageUpload("UploadImage")
    </script>
}
