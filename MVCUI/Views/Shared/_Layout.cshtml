@using StackExchange.Profiling;
<!DOCTYPE html>
<html lang="fa">
<head>
    <!-- #region Meta Tag -->
    @*@Html.Action(MVC.CreateMetaTag.ActionNames.MetaTag, MVC.CreateMetaTag.Name, new
        {
            title = ViewBag.Title,
            description = ViewBag.Description,
            keyWords = ViewBag.KeyWords
        })*@
    <link rel="canonical" href="@ViewBag.CanonicalUrl" />
    <meta http-equiv="Content-Language" content="fa" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    @RenderSection("metatags", false)
    <link rel="shortcut icon" href="@Links.Content.favicon.favicon_ico" type="image/x-icon">
    @*<link rel="apple-touch-icon" href="@Links.Content.Images.fav.apple_touch_icon_iphone_png" />
        <link rel="apple-touch-icon" sizes="72x72" href="@Links.Content.Images.fav.apple_touch_icon_ipad_png" />
        <link rel="apple-touch-icon" sizes="114x114" href="@Links.Content.Images.fav.apple_touch_icon_iphone4_png" />
        <link rel="apple-touch-icon" sizes="144x144" href="@Links.Content.Images.fav.apple_touch_icon_ipad3_png" />*@
    @*<link title="فید محصولات جدید سایت" href="@Url.Action(MVC.Feed.ActionNames.Product, MVC.Feed.Name)" type="application/rss+xml" rel="alternate" />*@
    <!-- #endregion -->
    <!--#region Bundle Style-->
    @Styles.Render(Links.BundleExtension.Style.MainCss_Css)
    @Styles.Render(Links.BundleExtension.Style.fonts)
    @Scripts.Render(Links.BundleExtension.Scripts.Modernizer)
    <!--Remove thiss meta tag after BundleTable.EnableOptimizations = false; -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")
        @Styles.Render("~/Search/css")*@
    @RenderSection(Links.BundleExtension.RenderSection.CssSection, required: false)
    <!--#endregion-->
</head>
<body>
    <noscript>
        <meta http-equiv="refresh" content="0;url=http://www.google.com">
    </noscript>
    <div id="m-container">
        <!-- #region Header -->
        <header id="m-header">
            @{ Html.RenderAction(MVC._SharedItem.ActionNames.NavBar, MVC._SharedItem.Name); }
            @{ Html.RenderAction(MVC._SharedItem.ActionNames.Search, MVC._SharedItem.Name);  }
            @{ Html.RenderAction(MVC._SharedItem.ActionNames.Menu, MVC._SharedItem.Name); }
        </header>
        <!-- #endregion -->

        <!-- #region Body -->
        @RenderBody()
        <!-- #endregion -->

        <!-- #region Footer -->
        @{ Html.RenderPartial(MVC.Shared.Views._subscribe); }
        @{ Html.RenderPartial(MVC.Shared.Views._Footer_Partial); }
        @{ Html.RenderPartial(MVC.Shared.Views._scroll_up); }
        <!-- #endregion -->
    </div>
    <!-- #region Bundle Scripts -->
    @Scripts.Render(Links.BundleExtension.Scripts.Jquery)
    @Scripts.Render(Links.BundleExtension.Scripts.JqueryVal)
    @*  @Scripts.Render("~/bundles/masterjs")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/customerBundle/js")*@

    @RenderSection(Links.BundleExtension.RenderSection.ScriptsSection, false)
    <!-- #endregion -->
    @MiniProfiler.RenderIncludes()
</body>
</html>